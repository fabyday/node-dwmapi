{
  "name": "node-dwmapi",
  "version": "1.0.0",
  "description" : "window dwmapi library wrapper.",
  "author": "fabyday",
  "license": "MIT",
  "homepage" : "https://github.com/fabyday/node-dwmapi",
  "main" : "src/index.js",
  "scripts": {
    "format": "clang-format -i --glob=*/**/*.{h,cpp,cc}",
    "test": "node test_all.js",
    "build-api" : "cd src/dwmapi && node-gyp configure && node-gyp build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fabyday/node-dwmapi.git"
  },

  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{h,cpp,cc}": [
      "npm run format",
      "git add"
    ]
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "clang-format": "^1.4.0",
    "cmake-js": "^7.1.1",
    "semver": "^7.1.3"
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2"
  }
}
